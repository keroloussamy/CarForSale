@model IEnumerable<DAL.Dealer>

@{
    ViewBag.Title = "Index";
}

<h2>Dealers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Dealer Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Address.City)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.User.Address.Direction)
        </th>

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.Address.City)
    </td>
    

    <th>
        <a href="@item.User.Address.Direction">Direction</a>
    </th>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
    </td>
</tr>
}

</table>
